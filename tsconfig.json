{
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "lib": [
      "es2022",
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}